<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   
    >
    
    
 	<ImageView
 	    android:id="@+id/image_animal_reprodutor"
 	  	android:layout_alignParentLeft="true"
 	  	android:layout_width="90dp"
 	  	android:layout_height="70dp"
 	    android:contentDescription="TODO"
 	    android:src="@drawable/rp_cao" />

 	<TextView 
 	    android:id="@+id/nome_reprodutor"
 	    android:layout_width="wrap_content"
 	    android:layout_height="wrap_content"
  	    android:text="Mr. Rex"
 	    android:layout_toRightOf="@id/image_animal_reprodutor"
 	    android:layout_marginTop="5dp"
 	    android:layout_marginLeft="5dp"
 	    android:textSize="16dp"
 	    />
 	<TextView 
 	    android:id="@+id/raca_reprodutor"
 	    android:layout_width="wrap_content"
 	    android:layout_height="wrap_content"
  	    android:text="Vira Lata"
 	  	android:layout_below="@id/nome_reprodutor"
 	  	android:layout_toRightOf="@id/image_animal_reprodutor"
 	  	 android:layout_marginLeft="5dp"
 	  	android:textSize="12dp"
 	    />
 	
 	<TextView 
 	    android:id="@+id/idade_reprodutor"
 	    android:layout_width="wrap_content"
 	    android:layout_height="wrap_content"
  	    android:text="02 anos"
 	  	android:layout_below="@id/raca_reprodutor"
 	  	android:layout_toRightOf="@id/image_animal_reprodutor"
 	  	 android:layout_marginLeft="5dp"
 	  	android:textSize="12dp"
 	    />
 	
 	<Button
 	    android:id="@+id/bt_reprodutor"
 	    android:layout_width="50dp"
 	    android:layout_height="40dp"
 	    android:layout_alignParentRight="true"
 	    android:layout_alignParentTop="true"
 	    android:layout_marginTop="14dp"
 	    android:drawableLeft="@drawable/heart_icon"
 	    android:gravity="right"
 	    android:paddingLeft="10dp"
 	    android:textAlignment="center"
 	    android:textColor="#ffffff" />

</RelativeLayout>
