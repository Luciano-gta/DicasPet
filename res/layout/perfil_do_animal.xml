<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="26dp"
        android:layout_below="@+id/imageViewPet"
        android:text="Nome:" />
    
      <TextView
        android:id="@+id/textViewNomePet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/textView1"
        android:layout_below="@id/textView1"
        android:text="Brutos"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/textViewNomePet"
        android:layout_below="@id/textViewNomePet"
        android:text="Espécie:" />
    
  <TextView
        android:id="@+id/TextViewEspeciePet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/textView2"
        android:layout_below="@id/textView2"
        android:text="Cachorro"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/TextViewEspeciePet"
        android:layout_below="@id/TextViewEspeciePet"
        android:text="Porte:" />
    
       <TextView
        android:id="@+id/TextViewPortePet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/textView3"
        android:layout_below="@id/textView3"
        android:text="Pequeno"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/TextViewPortePet"
        android:layout_below="@id/TextViewPortePet"
        android:text="Peso:" />

      <TextView
        android:id="@+id/TextViewPesoPet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:text="3 Kg"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextViewPesoPet"
        android:layout_below="@+id/TextViewPesoPet"
        android:text="Idade:" />

       <TextView
        android:id="@+id/TextViewIdadePet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:text="3 Meses"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/TextViewIdadePet"
        android:layout_below="@id/TextViewIdadePet"
        android:text="Raça:" />

    <TextView
        android:id="@+id/TextViewRacaPet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/textView6"
        android:layout_below="@id/textView6"
        android:text="Vira Lata"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
   <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/TextViewRacaPet"
        android:layout_below="@id/TextViewRacaPet"
        android:text="Sexo:" />

    <TextView
        android:id="@+id/TextViewSexoPet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/textView7"
        android:layout_below="@id/textView7"
        android:text="Fêmea"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    
    <ImageView
        android:id="@+id/imageViewPet"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/harrier" />

</RelativeLayout>
